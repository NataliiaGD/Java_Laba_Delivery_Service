<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.laba.solvd.delivery.persistence.PaymentRepository">
    <insert id="create" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        Insert into payments(payment_details,order_id) values (#{payment_details},#{order_id})
    </insert>

    <select id="retrieveAll" resultMap="PaymentResultMap">
        Select * from payments;
    </select>

    <delete id="deleteById">
        Delete from payments where id = #{id}
    </delete>

    <resultMap id="PaymentResultMap" type="com.laba.solvd.delivery.domain.Payment" autoMapping="false">
        <id column="id" property="id"/>
        <result column="payment_details" property="payment_details"/>
        <result column="order_id" property="order_id"/>
    </resultMap>
</mapper>