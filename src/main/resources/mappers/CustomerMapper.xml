<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.laba.solvd.delivery.persistence.CustomerRepository">
    <insert id="create" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        Insert into customers(first_name,last_name) values (#{first_name},#{last_name})
    </insert>

    <select id="retrieveAll" resultMap="CustomerResultMap">
        Select * from customers;
    </select>

    <delete id="deleteById">
        Delete from customers where id = #{id}
    </delete>

    <resultMap id="CustomerResultMap" type="com.laba.solvd.delivery.domain.Customer" autoMapping="false">
        <id column="id" property="id"/>
        <result column="first_name" property="firstName"/>
        <result column="last_name" property="lastName"/>
    </resultMap>
</mapper>