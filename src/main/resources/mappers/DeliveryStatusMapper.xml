<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.laba.solvd.delivery.persistence.DeliveryStatusRepository">
    <insert id="create" keyColumn="id" keyProperty="id" useGeneratedKeys="true">
        Insert into delivery_statuses(actual_status,customer_id,courier_id) values
        (#{actual_status},#{customer_id},#{courier_id})
    </insert>

    <select id="retrieveAll" resultMap="DeliveryStatusResultMap">
        Select * from delivery_statuses;
    </select>

    <select id="findById" resultMap="DeliveryStatusResultMap">
        select * from delivery_statuses where id = #{id}
    </select>

    <delete id="deleteById">
        Delete from delivery_statuses where id = #{id}
    </delete>

    <resultMap id="DeliveryStatusResultMap" type="com.laba.solvd.delivery.domain.DeliveryStatus" autoMapping="false">
        <id column="id" property="id"/>
        <result column="actual_status" property="actual_status"/>
        <result column="customer_id" property="customer_id"/>
        <result column="courier_id" property="courier_id"/>
    </resultMap>
</mapper>